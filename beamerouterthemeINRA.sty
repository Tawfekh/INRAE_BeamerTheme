%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Footline
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{footline}{INRA theme}{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=15 pt,leftskip=1.7cm,dp=1ex]{structure.fg}%
   \parbox{.2\paperwidth}{\color{INRA@dinst}\inserttitle \\ \color{INRA@linst}\insertauthor \textbackslash \color{INRA@linst}\insertdate\par}
  \end{beamercolorbox}
  }%
  \vskip3pt%
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Page de titre
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{title page}{INRATitle}{
  \vspace{0.26 \paperheight}%
  \hspace{0.137 \linewidth}%
  {\color{white}\huge\bf\textsc{\inserttitle}}
  \ifx\insertsubtitle\@empty\\[\baselineskip]
  \else{\\ \hspace{0.137 \linewidth} \color{INRA@cinst}\insertsubtitle}\\[\baselineskip]
  \fi
  \vfill
}
